<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardUseCompatPadding="true">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="146dp"
        android:background="@color/colorAccent">
        <ImageView
            android:id="@+id/restaurantImage"
            android:layout_width="301dp"
            android:layout_height="153dp"
            android:scaleType="centerCrop"
            android:src="@drawable/mainbg"
            android:layout_marginLeft="0dp"
            card_view:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteY="0dp" />

        <View android:background="@color/colorAccent"
            android:layout_width="4dp"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="0dp"
            android:layout_marginRight="8dp"
            card_view:layout_constraintRight_toRightOf="parent"
            card_view:layout_constraintLeft_toRightOf="@+id/restaurantImage"
            android:layout_marginLeft="0dp"
            card_view:layout_constraintHorizontal_bias="0.0" />

        <TextView
            android:id="@+id/restaurantName"
            android:layout_width="278dp"
            android:layout_height="34dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimaryDark"
            android:text="description"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/icons"
            android:layout_marginRight="-6dp"
            card_view:layout_constraintRight_toRightOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="-8dp"
            tools:layout_editor_absoluteX="305dp" />
        <TextView
            android:id="@+id/restaurantRating"
            android:layout_width="56dp"
            android:layout_height="29dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimaryDark"
            android:text="description"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/icons"
            android:layout_marginRight="0dp"
            card_view:layout_constraintRight_toRightOf="parent"
            card_view:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="69dp"
            android:layout_marginTop="8dp"
            card_view:layout_constraintTop_toBottomOf="@+id/restaurantName"
            card_view:layout_constraintVertical_bias="0.0" />
        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/mapButton"
            android:src="@drawable/ic_location_searching_white_24dp"
            card_view:layout_constraintLeft_toLeftOf="parent"
            card_view:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="519dp"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="0dp"
            card_view:layout_constraintRight_toRightOf="parent"
            card_view:layout_constraintHorizontal_bias="1.0" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>